#include<stdio.h>
#include<conio.h>
void main()
{
int arr[100],i,n,min;
printf("enter the number of elements in the array:");
scanf("%d",&n);
if(n>100||n<=0)
{
printf("invalid size!please enter a number between 1 and 100./n");
return;
}
printf("enter %d elements:\n",n);
for(i=0;i<n;i++)
{
scanf("%d",&arr[i]);
}
min=arr[0];
for(i=1;i<n;i++)
{
if(arr[i]<min)
{
min=arr[i];
}
}
printf("the minimum number in the array is:%d\n",min);
}
