#include<stdio.h>
#include<conio.h>
void main()
{
int arr[100],n,i,max;
printf("enter the number of elements in the array (upto 100):");
scanf("%d",&n);
if(n>100||n<=0)
{
printf("invalid size!please enter a number between 1 and 100.\n");
return;
}
printf("enter %d elements:\n",n);
for (i=0;i<n;i++)
{
scanf("%d",&arr[i]);
}
max=arr[0];
for(i=1;i<n;i++)
{
if(arr[i]>max)
{
max=arr[i];
}
}
printf("the maximum number in the array is :%d\n",max);
}
